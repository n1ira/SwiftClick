{
  "name": "SwiftClick",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "An all-in-one browser extension for web developers and designers to inspect, modify, and optimize websites.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "downloads",
    "clipboardWrite",
    "webNavigation",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["html/*", "css/*", "js/*", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open SwiftClick toolbar"
    },
    "toggle_inspector": {
      "suggested_key": {
        "default": "Shift+I",
        "mac": "Shift+I"
      },
      "description": "Toggle element inspector"
    },
    "toggle_eyedropper": {
      "suggested_key": {
        "default": "Shift+E",
        "mac": "Shift+E"
      },
      "description": "Toggle color eyedropper"
    }
  },
  "devtools_page": "html/devtools.html"
} 
